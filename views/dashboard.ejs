                        <input type="text" name="titleOrAchievement" placeholder="Title / 
Achievement (e.g., CEO, Doctor, Scientist)" required class="input-base">
       
                        <input type="number" name="graduationYear" placeholder="Graduation Year (e.g., 2010)" min="1900" max="2099" step="1" required class="input-base">
                        <textarea name="description" placeholder="Detailed description/bio (Max 800 characters)" maxlength="800" required class="input-base"></textarea>
            
               
  
                        <label class="block">
     
                            <span class="text-gray-700 font-semibold block mb-1">Profile Photo (Square, image file only):</span>
                    
                <input 
type="file" name="profilePhoto" accept="image/*" required class="file-input-style">
              
                        </label>

                        <button type="submit" class="submit-btn-primary" id="alumni-submit-btn">
                
     
                        Add Alumnus Profile
     
