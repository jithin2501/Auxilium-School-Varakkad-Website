                                <option value="Affiliation">Affiliation Certificate</option>
                                <option value="NOC">No Objection Certificate (NOC)</option>
                                <option value="Minority Certificate">Minority Certificate</option>
                                <option value="Building Fitness Certificate">Building Fitness Certificate</option>
                            </select>
                            <input type="text" name="title" placeholder="Document Title (e.g., Permanent Affiliation 2020)" required class="w-full p-3 border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        
