        <main class="main-content lg-ml-64 lg-p-8">
            <div class="mobile-menu-container lg-hidden">
     
                <button id="open-sidebar-btn" class="focus:outline-none" onclick="toggleSidebar()">
      
                    <svg class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
   
                </button>
       
             </div>
            
            <h2 id="section-title">ADMISSION APPLICATION</h2>
            
            <div id="status-message" class="hidden" role="alert"></div>

         
            <section id="applications-section" class="admin-section">
      
                <div class="admin-section-card shadow-md">
                    <p class="text-gray-500 text-center">Loading application data...</p>
                </div>
            </section>

       
           
            <section id="gallery-section" class="admin-section hidden">
                <div 
class="admin-section-card shadow-lg mb-8">
                    <h3 class="card-heading">Add New Gallery Item (Photo/Video)</h3>
                    <form id="galleryUploadForm" class="form-space-y-4" enctype="multipart/form-data">
                    
    
                        <input type="text" name="title" placeholder="Title (e.g., Annual Day 2024)" required class="input-base">
            
                    <textarea type="text" name="description" placeholder="Description (Max 250 characters)" maxlength="250" class="input-base"></textarea>
                   
      
           
                        <div class="grid-col-2 sm-grid-col-2">
            
                    <select name="type" required class="input-base">
                 
                        <option value="" disabled selected>Select Media Type</option>
       
                                <option value="photo">Photo</option>
                    
                    
                            <option value="video">Video</option>
                            </select>
     
                        <input type="file" name="mediaFile" accept="image/*,video/*" required class="file-input-style">
            
            
                        </div>

                        <button type="submit" class="submit-btn-primary" id="gallery-submit-btn">
                            Upload to Gallery
            
            
                    </button>
                    </form>
           
                </div>
                
                <h3 class="text-2xl font-bold text-gray-800 mb-4">Existing Gallery Items</h3>
           
                <div id="existing-gallery-items" class="grid-col-2 md-grid-col-2 lg-grid-col-3 gap-6">
                </div>
       
            </section>
            
