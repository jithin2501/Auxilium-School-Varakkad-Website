    <style>
        /* Override base styles to match the main site's font/color scheme */
        body {
            font-family: 'Roboto', sans-serif;
            color: #1a120b; 
        }

        .sidebar { 
            background-color: #1f2937;
            /* New: Mobile styles for sidebar */
            transform: translateX(-100%);
            transition: transform 0.3s ease-in-out;
            z-index: 50; /* Ensure it's above other content */
        }
        .sidebar.open {
            transform: translateX(0);
        }
        @media (min-width: 1024px) {
            .sidebar {
                transform: translateX(0); /* Always visible on large screens */
                position: fixed;
            }
        }

        .nav-item:hover { 
            background-color: #374151;
        }

        /* Mobile-responsive table styles */
        @media (max-width: 768px) {
            .admin-table {
                display: block;
                width: 100%;
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
            }
            
            .admin-section {
                padding: 0.5rem;
            }

            /* Mobile text wrapping and sizing */
            #section-title {
                font-size: 1.5rem !important;
                word-break: break-word;
                line-height: 1.2;
            }

            .admin-content {
                padding: 0.5rem !important;
            }

            /* Better mobile spacing */
            .p-4 {
                padding: 0.75rem !important;
            }

            .p-6 {
                padding: 1rem !important;
            }

            /* Mobile form improvements */
            input, select, textarea {
                font-size: 16px !important; /* Prevents iOS zoom */
            }
        }

        /* Table scroll indicator */
        .table-scroll-wrapper {
            position: relative;
            width: 100%;
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table-scroll-wrapper::after {
            content: "â†’";
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            font-size: 20px;
            color: #666;
            animation: bounce 1s infinite;
            display: none;
        }

        @media (max-width: 768px) {
            .table-scroll-wrapper.has-overflow::after {
                display: block;
            }
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(-50%) translateX(0); }
            50% { transform: translateY(-50%) translateX(5px); }
        }

        .spinner {
            border: 4px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top: 4px solid white;
            width: 1.5rem;
            height: 1.5rem;
            animation: spin 1s linear infinite;
            display: inline-block;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
